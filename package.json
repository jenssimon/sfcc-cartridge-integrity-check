{
  "name": "sfcc-cartridge-integrity-check",
  "version": "0.0.0-development",
  "description": "Check the integrity of SFCC cartridges that shouldn't be modified",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Jens Simon <https://github.com/jenssimon/>",
  "license": "MIT",
  "keywords": [
    "sfcc",
    "demandware",
    "salesforce",
    "commercecloud",
    "sfra",
    "cartridge",
    "integrity",
    "git",
    "hash",
    "modified"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/sfcc-cartridge-integrity-check"
  },
  "scripts": {
    "lint": "eslint --ext .tsx,.ts,.jsx,.js --fix ./",
    "build": "tsc",
    "prepare": "npm-run-all build",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint --ext .tsx,.ts,.jsx,.js ./",
    "ci-test:tsc": "tsc --noEmit",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "shelljs": "^0.8.5",
    "table": "^6.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
    "@jenssimon/eslint-config-base": "6.6.13",
    "@jenssimon/eslint-config-typescript": "3.6.30",
    "@types/node": "18.15.9",
    "@types/shelljs": "0.8.11",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.36.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "20.1.3",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "sonarjs/cognitive-complexity": "off"
    }
  },
  "packageManager": "yarn@3.5.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
