{
  "name": "sfcc-cartridge-integrity-check",
  "version": "0.0.0-development",
  "description": "Check the integrity of SFCC cartridges that shouldn't be modified",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Jens Simon <https://github.com/jenssimon/>",
  "license": "MIT",
  "keywords": [
    "sfcc",
    "demandware",
    "salesforce",
    "commercecloud",
    "sfra",
    "cartridge",
    "integrity",
    "git",
    "hash",
    "modified"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/sfcc-cartridge-integrity-check"
  },
  "scripts": {
    "lint": "eslint --ext .tsx,.ts,.mts,.cts,.jsx,.js,.mjs,.cjs ./",
    "build": "tsc",
    "prepare": "npm-run-all build",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "shelljs": "^0.8.5",
    "table": "^6.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@jenssimon/eslint-config-base": "^7.3.0",
    "@jenssimon/eslint-config-typescript": "^5.2.0",
    "@types/node": "^18.18.5",
    "@types/shelljs": "^0.8.13",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "semantic-release": "^22.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "sonarjs/cognitive-complexity": "off"
    }
  },
  "packageManager": "yarn@3.6.4",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
